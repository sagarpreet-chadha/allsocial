<main>

	<% if user_signed_in? %>
	<div id="new-post-form-container">
		<%= form_for @post, url: url_for(controller: 'posts' , action: 'create'), remote: true do |f| %>
			<%= f.label :content, "Add Post" %>
			<%= f.text_area :content, placeholder: "Type Here" %>
			<%= f.submit %>
		<% end %>
	</div>
	<% end %>

	<div id="posts-list-container">
		<ul id="posts-list">
			<% @posts.each do |post| %>
				<%= render 'post', p: post %>
			<% end %>
		</ul>
	</div>


</main>